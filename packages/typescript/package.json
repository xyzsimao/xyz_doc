{
  "name": "xyzdoc-typescript",
  "version": "5.0.1",
  "description": "Typescript Integration for xyzdoc",
  "keywords": [
    "Docs",
    "NextJs",
    "xyzdoc"
  ],
  "homepage": "https://xyzdoc.dev",
  "license": "MIT",
  "author": "Fuma Nama",
  "repository": "github:fuma-nama/xyzdoc",
  "files": [
    "dist/*"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./ui": {
      "types": "./dist/ui/index.d.ts",
      "import": "./dist/ui/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown",
    "clean": "rimraf dist",
    "dev": "tsdown --watch",
    "lint": "eslint .",
    "types:check": "tsc --noEmit"
  },
  "dependencies": {
    "estree-util-value-to-estree": "^3.5.0",
    "hast-util-to-estree": "^3.1.3",
    "hast-util-to-jsx-runtime": "^2.3.6",
    "remark": "^15.0.1",
    "remark-rehype": "^11.1.2",
    "tinyglobby": "^0.2.15",
    "ts-morph": "^27.0.2",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@mdx-js/mdx": "^3.1.1",
    "@types/estree": "^1.0.8",
    "@types/hast": "^3.0.4",
    "@types/mdast": "^4.0.4",
    "@types/node": "25.0.5",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "xyzdoc-core": "workspace:*",
    "xyzdoc-ui": "workspace:*",
    "tsdown": "^0.19.0",
    "typescript": "^5.9.3",
    "unified": "^11.0.5"
  },
  "peerDependencies": {
    "@types/react": "*",
    "xyzdoc-core": "^15.7.0 || ^16.0.0",
    "xyzdoc-ui": "^15.7.0 || ^16.0.0",
    "react": "*",
    "typescript": "*"
  },
  "peerDependenciesMeta": {
    "xyzdoc-ui": {
      "optional": true
    },
    "@types/react": {
      "optional": true
    }
  }
}
